{
    "name": "Mocker Cookie Manager",
    "version": "1.0.0",
    "description": "Config mocker related cookies.",
    "permissions": [
        "tabs", "http://*/*"
    ],

    "icons": {
        "64": "i/icon-active-64.png"
    },

    "manifest_version": 2,

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["content.js"],
        "all_frames": true
    }],

    "browser_action": {
        "default_title": "Config mocker related cookies",
        "default_icon": "i/icon-inactive-64.png",
        "default_popup":"popup.html"
    }
}
